<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lottooptionspro.controller.PreProcessBetSlipController" styleClass="chart-pane">
    <stylesheets>
        <URL value="@styling/style.css" />
    </stylesheets>

    <top>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets bottom="20"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="State Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="stateNameField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Game Name:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <TextField fx:id="gameNameField" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

            <Label text="Threshold:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="thresholdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Distance from Top:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="distanceFromTopField" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <Label text="Distance from Bottom:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
            <TextField fx:id="distanceFromBottomField" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

            <Label text="Distance from Left:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="distanceFromLeftField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Distance from Right:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="distanceFromRightField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        </GridPane>
    </top>

    <center>
        <VBox spacing="20" alignment="CENTER">
            <HBox spacing="20" alignment="CENTER" VBox.vgrow="ALWAYS">
                <ImageView fx:id="originalImageView" fitHeight="400" preserveRatio="true"/>
                <ImageView fx:id="processedImageView" fitHeight="400" preserveRatio="true"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Process Image" onAction="#processImage"/>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Button text="Save Processed Image" onAction="#saveProcessedImage"/>
                    <ImageView fx:id="saveConfirmationIcon" fitHeight="20" fitWidth="20" visible="false"/>
                </HBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>