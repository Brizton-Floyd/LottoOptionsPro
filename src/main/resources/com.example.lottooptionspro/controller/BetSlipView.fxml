<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox fx:id="mainContainer" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.lottooptionspro.controller.LotteryBetSlipController" styleClass="chart-pane" spacing="10">
    <stylesheets>
        <URL value="@styling/style.css" />
    </stylesheets>
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true">
        <content>
            <VBox fx:id="betslipsContainer" spacing="10" />
        </content>
    </ScrollPane>
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="printButton" text="Print" />
        <Button fx:id="extractColorButton" text="Extract Color" />
    </HBox>
</VBox>