<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<SplitPane fx:id="root" dividerPositions="0.5" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lottooptionspro.controller.LotteryBetslipCoordinateController">
    <stylesheets>
        <URL value="@styling/style.css" />
    </stylesheets>

    <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true" pannable="true">
        <ImageView fx:id="imageView" preserveRatio="true"/>
    </ScrollPane>

    <ScrollPane fitToWidth="true" fitToHeight="true">
        <VBox spacing="15" styleClass="chart-pane">
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" prefWidth="180"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="State" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="stateField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <Label text="Game" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="gameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <Label text="Panel Count" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="panelCountField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <Label text="Main Ball Rows" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="mainBallRowsField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Main Ball Columns" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="mainBallColumnsField" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="X Offsets" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <TextField fx:id="xOffsetsField" promptText="comma-separated" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <Label text="Y Offsets" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                <TextField fx:id="yOffsetsField" promptText="comma-separated" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

                <CheckBox fx:id="verticalOrientationCheckBox" text="Number Orientation Vertical" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2"/>
                <CheckBox fx:id="bottomToTopCheckBox" text="Start from Bottom" GridPane.columnIndex="0" GridPane.rowIndex="8" GridPane.columnSpan="2"/>

                <Label text="Main Ball Horizontal Spacing" GridPane.columnIndex="0" GridPane.rowIndex="9"/>
                <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="9">
                    <Slider fx:id="mainBallHorizontalSlider" min="10" max="200" value="30" blockIncrement="10" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="mainBallHorizontalSpacingField" prefWidth="50"/>
                </HBox>

                <Label text="Vertical Spacing" GridPane.columnIndex="0" GridPane.rowIndex="10"/>
                <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="10">
                    <Slider fx:id="verticalSlider" min="10" max="200" value="30" blockIncrement="10" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="verticalSpacingField" prefWidth="50"/>
                </HBox>

                <Label text="Marking Size" GridPane.columnIndex="0" GridPane.rowIndex="11"/>
                <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="11">
                    <Slider fx:id="sizeSlider" min="5" max="50" value="10" blockIncrement="1" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="markingSizeField" prefWidth="50"/>
                </HBox>

                <Separator GridPane.rowIndex="12" GridPane.columnSpan="2"/>

                <CheckBox fx:id="bonusGameCheckBox" text="Bonus Game" onAction="#toggleBonusFields" GridPane.columnIndex="0" GridPane.rowIndex="13" GridPane.columnSpan="2"/>
                <VBox fx:id="bonusFields" spacing="10" visible="false" managed="false" GridPane.columnIndex="0" GridPane.rowIndex="14" GridPane.columnSpan="2">
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" prefWidth="180"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                        <Label text="Bonus Ball Rows" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="bonusBallRowsField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label text="Bonus Ball Columns" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="bonusBallColumnsField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label text="Bonus X Offsets" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="bonusXOffsetsField" promptText="comma-separated" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label text="Bonus Y Offsets" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="bonusYOffsetsField" promptText="comma-separated" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <Label text="Bonus Ball Horizontal Spacing" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <Slider fx:id="bonusBallHorizontalSlider" min="10" max="200" value="30" blockIncrement="10" HBox.hgrow="ALWAYS"/>
                            <TextField fx:id="bonusBallHorizontalSpacingField" prefWidth="50"/>
                        </HBox>
                    </GridPane>
                </VBox>

                <Separator GridPane.rowIndex="15" GridPane.columnSpan="2"/>

                <CheckBox fx:id="jackpotOptionCheckBox" text="Jackpot Option" onAction="#toggleJackpotOptionFields" GridPane.columnIndex="0" GridPane.rowIndex="16" GridPane.columnSpan="2"/>
                <VBox fx:id="jackpotOptionFields" spacing="10" visible="false" managed="false" GridPane.columnIndex="0" GridPane.rowIndex="17" GridPane.columnSpan="2">
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" prefWidth="180"/>
                            <ColumnConstraints hgrow="ALWAYS"/>
                        </columnConstraints>
                        <Label text="Jackpot Option X" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="jackpotOptionXField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label text="Jackpot Option Y" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="jackpotOptionYField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    </GridPane>
                </VBox>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="loadImage" text="Load Image" onAction="#loadImage"/>
                <Button fx:id="saveCoordinates" text="Save Coordinates" onAction="#saveImage"/>
            </HBox>
        </VBox>
    </ScrollPane>
</SplitPane>