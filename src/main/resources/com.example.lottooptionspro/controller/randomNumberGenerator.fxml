<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lottooptionspro.controller.RandomNumberGeneratorController">
    <stylesheets>
        <URL value="@styling/style.css" />
    </stylesheets>
    <VBox fx:id="contentHolder" styleClass="chart-pane" spacing="15">

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
                <ColumnConstraints halignment="RIGHT"/>
                <ColumnConstraints hgrow="SOMETIMES"/>
            </columnConstraints>

            <Label text="RNG Type:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="rngComboBox" promptText="Select RNG Type" maxWidth="Infinity" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Number Set Per Pattern:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="numberSetPerPatternField" promptText="Enter number" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Targeted Prize Level:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <TextField fx:id="targetedPrizeLevelField" promptText="Enter level" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

            <Label text="Draw Days Per Week:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="drawDaysPerWeekField" promptText="Enter days" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>

        <HBox spacing="10">
            <Button text="Generate Numbers" onAction="#generateNumbers"/>
            <Button fx:id="generateBetslipsButton" text="Generate Betslips" onAction="#generateBetslips"/>
        </HBox>

        <TableView fx:id="generatedNumbersTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="numberSetColumn" text="Number Set"/>
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        </TableView>

        <TableView fx:id="prizeLevelResultsTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="correctNumbersColumn" text="Prize Level"/>
                <TableColumn fx:id="hitsColumn" text="Hits"/>
                <TableColumn fx:id="gamesOutColumn" text="Games Out"/>
                <TableColumn fx:id="expectedElapsedDaysBeforeWinColumn" text="Expected Games Out"/>
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        </TableView>

        <GridPane hgap="10" vgap="5">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" prefWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <Label text="Total Tickets:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Label fx:id="totalTicketsLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Estimated Days for Win:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Label fx:id="estimatedDaysLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        </GridPane>

        <Button text="Save Numbers" onAction="#saveNumbers"/>
    </VBox>
    <ProgressIndicator fx:id="progressIndicator" visible="false" StackPane.alignment="CENTER"/>
</StackPane>