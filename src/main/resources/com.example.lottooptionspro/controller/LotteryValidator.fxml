<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lottooptionspro.controller.LotteryValidatorController" spacing="15" styleClass="chart-pane">
    <stylesheets>
        <URL value="@styling/style.css" />
    </stylesheets>

    <Label text="Enter Winning Numbers:" styleClass="chart-header-main"/>
    <HBox fx:id="winningNumbersContainer" spacing="10" alignment="CENTER_LEFT"/>

    <HBox spacing="10">
        <Button text="Validate" onAction="#validateNumbers"/>
        <Button text="Load Game File" onAction="#loadGameFile"/>
    </HBox>

    <Label text="Purchased Tickets:" styleClass="chart-header-main"/>
    <TableView fx:id="ticketTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="ticketNumberColumn" text="Ticket #"/>
            <TableColumn fx:id="ticketColumn" text="Ticket Numbers"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Label text="Prize Level Results:" styleClass="chart-header-main"/>
    <TableView fx:id="prizeTable">
        <columns>
            <TableColumn fx:id="correctNumbersColumn" text="Correct Numbers"/>
            <TableColumn fx:id="hitsColumn" text="Hits"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>
